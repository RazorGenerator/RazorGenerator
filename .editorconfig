dotnet_naming_rule.types_should_be_pascalcase.symbols = types
dotnet_naming_rule.types_should_be_pascalcase.style = pascalcase

dotnet_naming_rule.async_method_should_be_pascalcaseasync.severity = suggestion
dotnet_naming_rule.async_method_should_be_pascalcaseasync.symbols = async_method
dotnet_naming_rule.async_method_should_be_pascalcaseasync.style = pascalcaseasync

dotnet_naming_rule.non_field_members_should_be_pascalcase.severity = suggestion
dotnet_naming_rule.non_field_members_should_be_pascalcase.symbols = non_field_members
dotnet_naming_rule.non_field_members_should_be_pascalcase.style = pascalcase

dotnet_naming_rule.public_or_protected_field_should_be_pascalcase.severity = silent
dotnet_naming_rule.public_or_protected_field_should_be_pascalcase.symbols = public_or_protected_field
dotnet_naming_rule.public_or_protected_field_should_be_pascalcase.style = pascalcase

dotnet_naming_rule.private_or_internal_static_field_should_be__underscoreprefixedcamelcase.severity = suggestion
dotnet_naming_rule.private_or_internal_static_field_should_be__underscoreprefixedcamelcase.symbols = private_or_internal_static_field
